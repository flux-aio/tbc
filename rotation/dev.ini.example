[paths]
; TMW profile template (icons, groups, bars) â€” used for new profiles
template = tmw-template.lua

; Directory containing class modules (default: Source/aio)
watchdir = Source/aio

[accounts]
; Each entry syncs to a WoW account's SavedVariables.
; Format: ACCOUNTNAME = full path to TellMeWhen.lua
; All accounts are synced on every change and watched for /reload.
YOURNAME = C:\Path\To\WoW\WTF\Account\YOURNAME\SavedVariables\TellMeWhen.lua
; ALTNAME = C:\Path\To\WoW\WTF\Account\ALTNAME\SavedVariables\TellMeWhen.lua

[profiles]
; Override profile names per class (optional)
; Default: "Diddy <ClassName>" (e.g., "Diddy Druid")
; druid = Chancity Druid
