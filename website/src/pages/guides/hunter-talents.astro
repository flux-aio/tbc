---
import Base from '../../layouts/Base.astro';
import TalentTree from '../../components/TalentTree.astro';
import { trees, presets } from '../../data/hunter-talents.js';
import { url } from '../../config';
---

<Base title="Hunter Talent Specs" description="Recommended talent specs for Flux AIO Hunter rotation.">
  <div class="container">
    <div class="breadcrumb">
      <a href={url('/')}>Home</a> / <a href={url('/classes/hunter')}>Hunter</a> / <a href={url('/guides/hunter-talents')}>Talents</a>
    </div>

    <section class="section">
      <h1 style="color: var(--hunter);">Hunter Talent Specs</h1>
      <p class="section-sub">The rotation adapts to your available talents. All three Hunter specs are supported.</p>
    </section>

    {presets.map((preset) => (
      <section class="section" id={preset.slug}>
        <TalentTree trees={trees} preset={preset} classColor="var(--hunter)" />
      </section>
    ))}

  </div>
</Base>
