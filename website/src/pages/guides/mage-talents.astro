---
import Base from '../../layouts/Base.astro';
import TalentTree from '../../components/TalentTree.astro';
import { trees, presets } from '../../data/mage-talents.js';
import { url } from '../../config';
---

<Base title="Mage Talent Specs" description="Recommended talent specs for Flux AIO Mage rotation.">
  <div class="container">
    <div class="breadcrumb">
      <a href={url('/')}>Home</a> / <a href={url('/classes/mage')}>Mage</a> / <a href={url('/guides/mage-talents')}>Talents</a>
    </div>

    <section class="section">
      <h1 style="color: var(--mage);">Mage Talent Specs</h1>
      <p class="section-sub">The rotation adapts to your available talents. All three Mage specs are supported.</p>
    </section>

    {presets.map((preset) => (
      <section class="section" id={preset.slug}>
        <TalentTree trees={trees} preset={preset} classColor="var(--mage)" />
      </section>
    ))}

  </div>
</Base>
