---
import Base from '../../layouts/Base.astro';
import TalentTree from '../../components/TalentTree.astro';
import { trees, presets } from '../../data/druid-talents.js';
import { url } from '../../config';
---

<Base title="Druid Talent Specs" description="Recommended talent specs for Flux AIO Druid rotation.">
  <div class="container">
    <div class="breadcrumb">
      <a href={url('/')}>Home</a> / <a href={url('/classes/druid')}>Druid</a> / <a href={url('/guides/druid-talents')}>Talents</a>
    </div>

    <section class="section">
      <h1 style="color: var(--druid);">Druid Talent Specs</h1>
      <p class="section-sub">Flux AIO adapts to your available talents. Below are the recommended builds for each playstyle.</p>
    </section>

    {presets.map((preset) => (
      <section class="section" id={preset.slug}>
        <TalentTree trees={trees} preset={preset} classColor="var(--druid)" />
      </section>
    ))}

  </div>
</Base>
